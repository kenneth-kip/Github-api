<div class="container justify-content-center align-items-start d-flex p-5">
  <div class="card mr-5" style="width: 20rem;">
    <img class="card-img-top" src="<%= @user.avatar_url %>" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title"><%= @user.name %></h4>
      <p class="card-text"><%= @user.bio %></p>
      <p class="card-text">
        <b>Email:</b>
        <% if  @user.email %>
          <%= @user.email %>
        <% else %>
           Not Available
        <% end %>
      </p>
      <p class="card-text"><%= @user.location %></p>
      <a href="<%= @user.html_url %>" class="card-link">Github Profile</a>
    </div>
  </div>
  <div class="d-flex flex-column justify-content-between">
    <div class="card mb-5 w-75">
      <div class="card-header">
        Quote
      </div>
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
          <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
        </blockquote>
      </div>
    </div>
